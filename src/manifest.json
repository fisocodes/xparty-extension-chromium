{
    "manifest_version": 3,
    "minimum_chrome_version": "116",
    "name": "xparty",
    "version": "0.0.1",
    "description": "Watch videos in party",
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/index.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/watch*"],
            "js": ["content/video-handler.js"]
        },
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["content/gui.js"]
        }
    ],
    "permissions": [
        "webNavigation",
        "storage"
    ]
}